<img src="/svg/SVG/foodcourt.svg" alt="Food Court" class="svg-buttons FoodCourt" data-info="FoodCourt" />
<img src="/svg/SVG/photobooth.svg" alt="Photo Booth" class="svg-buttons PhotoBooth" data-info="PhotoBooth" />
<img src="/svg/SVG/makeupsalon.svg" alt="Makeup Salon" class="svg-buttons MakeupSalon" data-info="MakeupSalon" />
<img src="/svg/SVG/dreamzone.svg" alt="Dream Zone" class="svg-buttons DreamZone" data-info="DreamZone" />

<script client:load>
  const svgButtons = document.querySelectorAll('.svg-buttons');
  let activeOverlay = null;

  svgButtons.forEach((button) => {
    button.addEventListener('click', (e) => {
      const infoType = button.getAttribute('data-info');
      const overlay = document.getElementById(`${infoType}-info`);

      if (overlay) {
        // Show the corresponding overlay
        overlay.classList.add('show');
        overlay.classList.remove('hide');
        activeOverlay = overlay;
      }

      // Prevent immediate closing
      e.stopPropagation();
    });
  });

  // Close overlay when clicking outside
  document.addEventListener('click', (e) => {
    if (!activeOverlay) return; // If no active overlay, do nothing

    const clickedOutsideOverlay = !activeOverlay.contains(e.target);
    const clickedOutsideButton = !e.target.classList.contains('svg-buttons');

    if (clickedOutsideOverlay && clickedOutsideButton) {
      activeOverlay.classList.remove('show');
      activeOverlay.classList.add('hide');
      activeOverlay = null;
    }
  });
</script>

