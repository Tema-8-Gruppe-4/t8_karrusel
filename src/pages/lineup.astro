import MainLayout from "../layout/MainLayout.astro";
import Header from "../layout/Header.astro";
import Search from "../components/Search.astro";
import Button from "../components/Button.astro";
import ArtistInfo from "../components/ArtistList.astro";
import Footer from "../layout/Footer.astro";
import ScrollToTop from "../components/ScrollToTop.astro";
import GoBackArrow from "../components/GoBackArrow.astro";
import StaticProgram from "../components/StaticProgram.astro";
---
<MainLayout>
<Header/>
  <h1>LINEUP 2025</h1>
  <GoBackArrow/>
 <Search/>
 <a href="#artist_list"><Button buttontext="Check out this year’s artists"/></a>

  <h1>PROGRAM</h1>
  <nav>
    <a href="#thursday">- THURSDAY</a>
    <a href="#friday">- FRIDAY</a>
    <a href="#saturday">- SATURDAY</a>
  </nav>
  <StaticProgram/>
<h1>THIS YEAR'S ARTISTS</h1>
<ArtistInfo/>
<ScrollToTop />
  <Footer/>
</MainLayout>

<style>
    h1 {
    margin: 5rem;
    }
    a {
    margin-left: 1rem;
    }
    h3 {
    margin-top: 3rem;
    margin-left: 2rem;
    }
    nav {
        display: flex;
        margin-left: 1.5rem;
    }
    @media (max-width: 800px){
        h1 {
            text-align: center;
    }
} 
</style>